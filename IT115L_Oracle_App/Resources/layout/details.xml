<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/eventdetailsLinearLayout"
    android:background="@android:color/white">
    <TextView
        android:text="Event Details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="60.6dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/textView1"
        android:layout_marginBottom="7.6dp" />
    <TextView
        android:text="Men's Basketball"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:id="@+id/txt_eventName"
        android:gravity="center" />
    <TextView
        android:text="Day 1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_day"
        android:gravity="center"
        android:layout_marginTop="50px" />
    <TextView
        android:text="Date: July 25, 2024"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_date"
        android:gravity="center"
        android:layout_marginTop="130px" />
    <TextView
        android:text="Venue: MMCL Gym"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_venue"
        android:gravity="center"
        android:layout_marginTop="50px" />
    <TextView
        android:text="Time: 1 - 3 PM"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_time"
        android:gravity="center"
        android:layout_marginTop="50px" />
    <TextView
        android:text="Please withdraw first before re-enlisting."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="55dp"/>
    <Button
        android:text="ENLIST AS PARTICIPANT"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/btn_participant"/>
    <Button
        android:text="ENLIST AS AUDIENCE"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/btn_attendant"/>
    <Button
        android:text="WITHDRAW ENLISTMENT"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/btn_withdraw"/>
    <Button
        android:text="RETURN"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="55dp"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/btn_return"/>

</LinearLayout>
