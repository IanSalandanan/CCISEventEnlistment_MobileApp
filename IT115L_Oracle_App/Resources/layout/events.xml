<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <TextView
        android:text="Days of Events"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="60.6dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/textView1"
        android:layout_marginBottom="7.6dp" />
    <TextView
        android:text="Select Event Day"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:id="@+id/textView2" />
    <Button
        android:text="Day 1 Events"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/day1Btn" />
    <Button
        android:text="Day 2 Events"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/day2Btn" />
    <Button
        android:text="Day 3 Events"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/day3Btn" />
    <Button
        android:text="Day 4 Events"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/day4Btn" />
    <Button
        android:text="Day 5 Events"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/day5Btn" />
    <Button
        android:text="Profile"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/profileBtn" />
    <Button
        android:text="Sign Out"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_marginHorizontal="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#4ca4e4"
        android:textColor="@android:color/white"
        android:id="@+id/signOutBtn" />

</LinearLayout>
